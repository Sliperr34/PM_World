  {
    "id": "morale_self_control",
    "type": "morale_type",
    "text": "Self Control"
  },
  {
    "id": "morale_self_control_1",
    "type": "morale_type",
    "text": "Self Control"
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_self_control",
    "effect": [
      { "u_lose_morale": "morale_self_control" },
      { "u_lose_morale": "morale_self_control_1" },
      { "math": [ "_zeroed = 0" ] },
      {
        "if": { "math": [ "u_val('morale') > 0" ] },
        "then": { "math": [ "_pos = -1" ] },
        "else": { "math": [ "_pos = 1" ] }
      },
      { "math": [ "_total_control = (12 * u_skill('self-control')) / (1 + (u_vitamin('emotion') / 50))" ] },
      {
        "if": { 
          "or": [ 
            { "and": [ { "math": [ "_pos == 1" ] }, { "math": [ "u_val('morale') > (-1 * _total_control)" ] } ] },
            { "and": [ { "math": [ "_pos == -1" ] }, { "math": [ "u_val('morale') < _total_control" ] } ] }
          ]
        },
        "then": [ { "math": [ "_morale_change = -1 * u_val('morale')" ] }, { "math": [ "_zeroed = 1" ] } ],
        "else": { "math": [ "_morale_change = _pos * _total_control" ] }
      },
      { "u_add_morale": "morale_self_control", "bonus": { "math": [ "_morale_change"] }, "capped": true, "max_bonus": 100, "duration": "24 hours" },
      { 
        "if": { "and": [ { "math": [ "_zeroed == 1" ] }, { "math": [ "u_val('morale') != 0" ] } ] },
        "then": [ 
          { "u_lose_morale": "morale_self_control" },
          { "u_add_morale": "morale_self_control", "bonus": 1000, "max_bonus": 1000, "capped": true, "duration": "24 hours" },
          { "u_add_morale": "morale_self_control_1", "bonus": -1000, "max_bonus": -1000, "capped": true, "duration": "24 hours" }
        ]
      },
      {
        "if": { "math": [ "u_vitamin('emotion') <= 25" ] },
        "then": { "run_eocs": [ "EOC_self_control_shin" ] },
        "else": { "run_eocs": [ "EOC_remove_shin" ] } 
      }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_self_control_refresh",
    "effect": [
      { "u_lose_var": "trance_locked" }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_self_control_remove",
    "condition": { "u_has_trait": "mut_self_control_on" },
    "effect": [
      { "u_lose_trait": "mut_self_control_on" }, 
      { "u_add_trait": "mut_self_control_off" }, 
      
      { "u_message": "Your focus wavers, emotions flooding free from your control." }, 
      { "run_eocs": [ "EOC_self_control_end" ] } 
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_self_control_start",
    "condition": { "not": { "compare_string": [ "true", { "u_val": "trance_locked" } ] } },
    "effect": [
      { "u_add_var": "trance_locked", "value": "true" },
      { "run_eocs": "EOC_self_control_refresh", "time_in_future": "22 hours" },
      { "run_eocs": "EOC_self_control_remove", "time_in_future": { "math": [ "( 60 * 60 ) * u_skill('self-control')" ] } },
      { "run_eocs": [ "EOC_self_control_shin" ] } 
    ],
    "false_effect": [
      { "u_message": "You don't have the energy to discard your emotions just yet.", "type": "bad" },
      { "run_eocs": [ "EOC_self_control_remove" ], "time_in_future": "2 seconds" }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_self_control_shin",
    "condition": {
      "and": [ { "math": [ "u_skill('self-control') >= 3" ] }, { "math": [ "u_val('focus') > 20" ] }, { "math": [ "u_vitamin('trauma') > 10" ] }, { "u_has_proficiency": "prof_shin_0" } ]
    },
    "effect": [
      { "u_cast_spell": { "id": "spell_shin", "hit_self": true } }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_self_control_end",
    "effect": [
      { "u_lose_morale": "morale_self_control" },
      { "u_lose_morale": "morale_self_control_1" },
      { "run_eocs": [ "EOC_remove_shin" ] }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_remove_shin",
    "condition": {
      "u_has_item": "SHIN_aura"
    },
    "effect": [
